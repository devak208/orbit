# Database Configuration
DATABASE_URL="postgresql://username:password@hostname:5432/database_name"

# Application URLs
NEXT_PUBLIC_BASE_URL=https://your-app-name.onrender.com
NEXTAUTH_URL=https://your-app-name.onrender.com

# NextAuth Secret (generate a strong secret)
NEXTAUTH_SECRET=your-super-secret-nextauth-key-for-production

# OAuth Providers (optional - configure if needed)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# WebSocket Configuration
NEXT_PUBLIC_WEBSOCKET_URL=wss://your-websocket-service.onrender.com
